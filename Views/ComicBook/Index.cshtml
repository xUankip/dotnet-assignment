@model IEnumerable<ComicBook>

<h1>Comic Books</h1>
<a asp-action="Create" class="btn btn-primary">Add New Comic Book</a>
<table class="table">
    <thead>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Price Per Day</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Author</td>
            <td>@item.PricePerDay</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ComicBookID" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.ComicBookID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>